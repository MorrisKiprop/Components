<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgWater"
        android:layout_width="144dp"
        android:layout_height="133dp"
        app:srcCompat="@drawable/instagram" />

    <CheckBox
        android:id="@+id/checkBoxFootball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Football" />

    <CheckBox
        android:id="@+id/checkBoxRugby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rugby" />

    <ToggleButton
        android:id="@+id/toggleButtonWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn on Wi-Fi" />

    <Switch
        android:id="@+id/switchLightMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn on Dark Mode" />

    <RadioGroup
        android:id="@+id/groupGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female" />

        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>
</LinearLayout>